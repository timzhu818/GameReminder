<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp">

        <ImageView
            android:id="@+id/image_stadium"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/backgrounds/scenic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="24dp"
            android:padding="8dp"
            android:textSize="22sp"
            android:textStyle="bold"
            style="@style/TextAppearance.AppCompat.Title"
            android:gravity="center"
            android:id="@+id/stadium_name"
            android:background="#5C3A6F2D"
            android:textColor="#FFFFFF"
            app:layout_constraintTop_toTopOf="@id/image_stadium"
            app:layout_constraintStart_toStartOf="@id/image_stadium"
            app:layout_constraintEnd_toEndOf="@id/image_stadium"
            tools:text="ramitates" />


        <ImageView
            android:id="@+id/badge_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="270dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/image_stadium"
            tools:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/name_team"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/badge_image"
            tools:text="Arsenal" />

        <TextView
            android:id="@+id/league_team"
            style="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="16dp"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/name_team"
            app:layout_constraintStart_toStartOf="@+id/name_team"
            app:layout_constraintTop_toBottomOf="@+id/name_team"
            tools:text="EP" />

        <TextView
            android:id="@+id/team_desc"
            style="@style/TextAppearance.MaterialComponents.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:textStyle="italic"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/league_team" />

        <Button
            android:id="@+id/btn_add_to_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="@string/add_to_watch_list"
            android:textSize="18sp"
            android:backgroundTint="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/team_desc" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>